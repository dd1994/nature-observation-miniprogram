<view class="page-container">
  <observation-detail-topbar userId="{{observationDetail.id}}" userName="{{observationDetail.user_name}}" userAvatar="{{observationDetail.avatar}}" observedOn="{{observationDetail.observed_on}}" />
  <t-swiper current="{{currentPhoto}}" autoplay="{{true}}" duration="{{500}}" interval="{{3000}}" list="{{swiperList}}" height="{{'560rpx'}}" navigation="{{ { type: 'dots-bar' } }}" t-class="swiper-theme" bind:click="onSwiperClick" />
  <taxon-cell taxon="{{observationDetail}}"></taxon-cell>
  <t-tabs split="{{false}}" defaultValue="{{1}}" t-class="custom-tabs">
    <t-tab-panel label="信息" value="0">
      <!-- <t-cell wx:if="{{description}}" description="{{description}}" hover>
        <view style="display: flex; align-items: center;" slot="title">
          <t-icon name="info-circle" style="margin-right: 5px;" /> 备注
        </view>
      </t-cell> -->
      <view wx:if="{{description}}" class="observation-desc">
        <text>{{description}}</text>
      </view>
      <t-cell jump-type="navigateTo" wx:if="{{recommend_address_name}}" description="{{recommend_address_name}}" hover arrow url="{{mapUrl}}">
        <view style="display: flex; align-items: center;" slot="title">
          <t-icon name="location" style="margin-right: 5px;" />观察位置
        </view>
      </t-cell>

      <view wx:if="{{isOwner}}" class="edit-button-wrapper">
        <t-button bind:tap="edit" icon="edit" theme="primary" block size="medium" variant="outline">编辑观察</t-button>
      </view>
    </t-tab-panel>
    <t-tab-panel label="鉴定" value="1">
      <view class="identifications-pannel">
        <identifications identifications="{{identifications}}" />
        <view class="edit-button-wrapper">
          <t-button icon="filter-2" theme="primary" block size="medium" bind:tap="addIdentification">添加鉴定</t-button>
        </view>
      </view>
    </t-tab-panel>
  </t-tabs>
</view>