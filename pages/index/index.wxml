<view class="index-page">
  <view class="empty-tips" wx:if="{{isEmpty}}">
    <t-button block theme="primary" bind:tap="onAddIconTap">开始记录</t-button>
    <view class="empty-tips__or">或者</view>
    <t-button block theme="primary" variant="outline" bind:tap="goToExplore">先随便逛逛</t-button>
  </view>
  <view wx:else>
    <t-tabs sticky stickyProps="{{stickyProps}}" split="{{false}}" defaultValue="{{0}}" t-class-item="custom-tabs" t-class-content="custom-tab-content">
      <t-tab-panel label="{{tab1Title}}" value="0">
        <observation-list bind:refresh="resetAndFetchObservations" observations="{{observations}}" userProfile="{{userProfile}}" allLoaded="{{allLoaded}}"></observation-list>
      </t-tab-panel>
      <t-tab-panel label="{{tab2Title}}" value="1">
        <view>物种列表</view>
      </t-tab-panel>
    </t-tabs>
  </view>
  <add-observation-button wx:if="{{!isEmpty}}" bind:tap="onAddIconTap" />
</view>