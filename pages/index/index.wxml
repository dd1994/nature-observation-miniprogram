<view class="observations-list-page">
  <view class="observation-list">
    <view class="observation-list__item" wx:key="id" wx:for="{{observations}}">
      <view class="observation-list__item__text">{{item.common_name}}</view>
      <image class="observation-list__item__img" src="{{item.photos[0]}}"></image>
    </view>
  </view>

  <t-icon class="observation-add-icon" name="add-circle" color="green" size="60px" bind:tap="onAddIconTap" />
</view>