<view class="page-mine">
  <view class="cell-group">
    <t-cell bordered="{{false}}" title="{{displayName}}" bind:tap="login" hover arrow>
      <view class="avatar" slot="left-icon">
        <t-avatar wx:if="{{user.avatar}}" shape="round" size="large" image="{{user.avatarUrl}}" />
        <t-avatar wx:else size="large" shape="round" image="https://nature-observation-user-avatar.oss-cn-beijing.aliyuncs.com/me.png" />
      </view>
    </t-cell>
  </view>

  <basic-count-card wx:if="{{user}}" statCount="{{statCount}}" />
  <!-- <view wx:if="{{user}}" class="mine-cell-group">
    <t-cell title="我的统计" hover arrow leftIcon="chart-pie" />
  </view> -->

  <view class="cell-group">
    <t-cell t-class="taxon-cell" bordered="{{false}}" title="物种百科" url="/pages/taxon-picker/taxon-picker?hidePicker=1" hover arrow leftIcon="search" />
    <!-- <t-cell t-class="batch-import" bordered="{{false}}" title="导入导出" url="/pages/import-export/import-export" hover arrow leftIcon="backup" /> -->
  </view>

  <view class="cell-group">
    <t-cell t-class="setting-cell" wx:if="{{user}}" title="设置" hover arrow bordered="{{false}}" leftIcon="setting" url="/pages/setting/setting" />
    <t-cell title="关于" t-class="about-us" hover arrow url="/pages/about/about" leftIcon="user-1" />
  </view>
</view>