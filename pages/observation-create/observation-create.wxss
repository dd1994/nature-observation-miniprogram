/* pages/observation-create/observation-create.wxss */
.page-container {
  --std-font-size: 20px;
  --td-font-size-m: 20px;
  font-size: 20px;
}

.create-image-uplader-wrapper {
  margin-bottom: 20px;
}

.create-form-item-wrapper {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  --td-input-vertical-padding: 0;
  padding: 0 10px;
}

.create-form-item-placeholder {
  color: rgba(0, 0, 0, 0.4) !important;
  font-size: var(--std-font-size) !important;
}

.create-form-item-icon-wrapper {
  margin-right: 13px;
}

.create-form-item__right-icon {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex: none;
}

.create-form-item-content {
  font-size: var(--std-font-size);
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
}

.create-form-item-checkbox {
  padding: 0;
}

.create-form-item-checkbox {
  padding: 0 !important;
}

.create-form-save-button {
  position: fixed;
  bottom: 40px;
  left: 10px;
  right: 10px;
}