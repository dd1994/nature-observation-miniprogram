<view class="user-home-container">
  <view class="user-home-header">
    <t-avatar bind:tap="previewUserAvatar" wx:if="{{userProfile.avatarUrl}}" shape="round" size="large" image="{{userProfile.avatarUrl}}" />
    <view class="user-home-header__right">
      <view class="user-nickname">
        <view class="user-nickname__text">{{userProfile.user_name}}</view>
        <view bind:tap="openStatPage" class="user-nickname__stat">查看统计</view>
      </view>
      <view class="user-bio">
        {{userProfile.bio || '这是一位神秘用户，还没有进行自我介绍~'}}
      </view>
    </view>
  </view>
  <view>
    <index-tab tabs="{{[{value: 0, title: '记录' + '(' + observationsTotal + ')'}, {value: 1, title: '物种' + '(' + taxonTotal + ')'}]}}" bind:onTabChange="activeTabChange" activeTab="{{activeTab}}" bind:refresh="refresh">
    </index-tab>
    <view style="height: 90vh;">
      <block wx:if="{{activeTab === 0}}">
        <observation-list bind:scrolltolower="bindscrolltolower" bind:refresh="resetAndFetchObservations" observations="{{observations}}" userProfile="{{userProfile}}" allLoaded="{{observationsAllLoaded}}"></observation-list>
      </block>
      <block wx:if="{{activeTab === 1}}">
        <taxon-list taxon="{{taxon}}" allLoaded="{{taxonAllLoaded}}" bind:scrolltolower="bindscrolltolower"></taxon-list>
      </block>
    </view>
    <!-- <t-tabs space-evenly="{{false}}" sticky stickyProps="{{stickyProps}}" split="{{false}}" swipeable="{{false}}" defaultValue="0" value="{{activeTab}}" bind:change="activeTabChange" t-class-item="custom-tabs" t-class-content="custom-tab-content">
      <t-tab-panel label="{{tab1Title}}" value="0">
        <observation-list bind:refresh="resetAndFetchObservations" bind:scrolltolower="bindscrolltolower" observations="{{observations}}" userProfile="{{userProfile}}" allLoaded="{{observationsAllLoaded}}"></observation-list>
      </t-tab-panel>
      <t-tab-panel label="{{tab2Title}}" value="1">
        <taxon-list taxon="{{taxon}}" bind:scrolltolower="bindscrolltolower" allLoaded="{{taxonAllLoaded}}"></taxon-list>
      </t-tab-panel>
    </t-tabs> -->
  </view>
</view>