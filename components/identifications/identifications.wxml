<view class="identifications-list">
  <view class="identifications-item" wx:for="{{formattedIdentifications}}" wx:key="id">
    <view class="identifications-item-user">
      <user-name-and-avatar color="rgba(0,0,0,0.7)" userProfile="{{item}}" />
      <view style="margin-left: 10px;">鉴定于 {{item.created_from_now}}</view>
    </view>

    <view data-taxon="{{item}}" bind:tap="openTaxonDetail" hover arrow class="id-taxon-wrapper">
      <view class="taxon-common-name">{{item.common_name}}</view>
      <view class="taxon-scientific-name">{{item.scientific_name}}</view>
    </view>
  </view>
</view>