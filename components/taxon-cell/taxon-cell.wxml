<view>
  <t-cell wx:if="{{taxon.photos}}" bordered="{{false}}" bind:click="openTaxonDetail" title="{{taxon.common_name}}" hover arrow image="{{taxon.photos + '?x-oss-process=image/resize,p_20/format,webp'}}" t-class="taxon-name-cell">
    <slot slot="note"></slot>
    <view class="taxon-name-cell__description" slot="description">{{taxon.scientific_name}}</view>
  </t-cell>
  <t-cell wx:else bordered="{{false}}" bind:click="openTaxonDetail" title="{{taxon.common_name}}" hover arrow t-class="taxon-name-cell">
    <slot slot="note"></slot>
    <view class="taxon-name-cell__description" slot="description">{{taxon.scientific_name}}</view>
  </t-cell>
</view>