<view class="page-container">
  <view class="taxon-name">
    <view class="taxon-name-c">
      {{taxon.name_c}}
    </view>
    <view class="taxon-name-s">
      {{taxon.name}}
    </view>
  </view>
  <view wx:for-index="idx" class="taxon-detail-item" wx:for="{{faunaContent}}">
    <view class="desc-type-title">
      {{item.descTypeChinese}}：
    </view>
    <view wx:for="{{item.DescriptionInfo}}" wx:for-item="desc">
      <rich-text nodes="{{desc.descontent}}" />
      <view>
        <view wx:if="{{idx === taxon.detail.length - 1}}" class="taxon-detail-item-refs" wx:for="{{desc.refs}}" wx:for-item="ref">
          引用来源: {{ref}}
        </view>
      </view>
    </view>
  </view>
</view>